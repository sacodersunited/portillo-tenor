{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "published": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "opera",
        "recital"
      ],
      "default": "opera",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "opera_house": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state_country": {
      "type": "string"
    },
    "start_date": {
      "type": "date",
      "required": true
    },
    "end_date": {
      "type": "date",
      "required": true
    },
    "link": {
      "type": "string"
    }
  }
}
